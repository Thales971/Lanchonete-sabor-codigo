generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model Cliente {
    id         Int      @id @default(autoincrement())
    nome       String
    telefone   String   @db.Char(11) @unique
    email      String   @unique
    cpf        String   @db.Char(11) @unique
    cep        String?  @db.Char(8)
    logradouro String?
    bairro     String?
    localidade String?
    uf         String?
    ativo      Boolean  @default(true)

    // Relacionamento 1:N com Pedido
    pedidos    Pedido[]

    @@map("Cliente")
}

enum TipoCategoria {
    LANCHE
    BEBIDA
    SOBREMESA
    COMBO
}

model Produto {
    id         Int      @id @default(autoincrement())
    nome       String
    descricao  String
    categoria  TipoCategoria
    preco      Decimal  @db.Decimal(10, 2)
    disponivel Boolean  @default(true)

    // Relacionamento 1:N com ItemPedido
    itens      ItemPedido[]

    @@map("Produto")
}

enum Status {
    ABERTO
    PAGO
    CANCELADO
}

model Pedido {
    id         Int      @id @default(autoincrement())
    clienteId  Int
    cliente    Cliente  @relation(fields: [clienteId], references: [id])
    status     Status   @default(ABERTO)
    total      Decimal  @db.Decimal(10, 2) @default(0)
    criadoEm   DateTime @default(now())

    // Relacionamento 1:N com ItemPedido
    itens      ItemPedido[]

    @@map("Pedido")
}

model ItemPedido {
    id            Int      @id @default(autoincrement())
    pedidoId      Int
    pedido        Pedido   @relation(fields: [pedidoId], references: [id])
    produtoId     Int
    produto       Produto  @relation(fields: [produtoId], references: [id])
    quantidade    Int
    precoUnitario Decimal  @db.Decimal(10, 2)

    @@map("ItemPedido")
}




